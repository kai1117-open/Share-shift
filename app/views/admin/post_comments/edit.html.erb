<h1>コメント編集</h1>

<%= form_with(model: [@post, @comment], url: admin_post_post_comment_path(@post, @comment), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, 'コメント内容' %>
    <%= form.text_area :content, class: 'form-control', rows: 5 %>
  </div>
  <div>
    <%= form.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to '戻る', admin_post_post_comments_path(@post), class: 'btn btn-secondary mt-2' %>