<h1>すべてのコメント一覧</h1>

<%= form_with(url: search_admin_post_comments_path, method: :get, local: true) do %>
  <div class="form-group">
    <%= label_tag :q, 'コメントを検索' %>
    <%= text_field_tag :q, params[:q], class: 'form-control' %>
  </div>
  <%= submit_tag '検索', class: 'btn btn-primary' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>コメント内容</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <td>
          <%= link_to '編集', edit_admin_post_post_comment_path(comment.post_id, comment), class: 'btn btn-warning btn-sm' %>
          <%= button_to '削除', admin_post_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
