<h1 class="my-4 text-center">管理者用: グループ一覧</h1>

<div class="container">
  <!-- 検索フォーム -->
  <%= form_with url: search_admin_groups_path, method: :get, local: true do %>
    <div class="form-group mb-3">
      <%= label_tag :keyword, 'グループ名検索', class: 'form-label' %>
      <%= text_field_tag :keyword, params[:keyword], class: 'form-control', placeholder: 'グループ名を入力' %>
    </div>
    <%= submit_tag '検索', class: 'btn btn-primary' %>
  <% end %>

  <!-- 検索結果一覧 -->
  <% if @groups.present? %>
    <ul class="list-group mt-3">
      <% @groups.each do |group| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>グループ名:</strong> <%= group.name %><br>
            <strong>住所:</strong> <%= group.address %>
          </div>
          <%= link_to '詳細を見る', admin_group_path(group), class: 'btn btn-info btn-sm' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>該当するグループは見つかりませんでした。</p>
  <% end %>

  <div class="text-end">
    <%= link_to '戻る', admin_homes_path, class: 'btn btn-secondary mt-3' %>
  </div>

</div>

