<div class="container mt-4">
  <h1 class="text-center"><%= @post.title %> の編集</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @post, url: admin_post_path(@post), method: :patch do |form| %>
        <div class="form-group">
          <%= form.label :title, 'タイトル' %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :content, '内容' %>
          <%= form.text_area :content, class: 'form-control', rows: 5 %>
        </div>

        <div class="form-group d-flex justify-content-between">
          <%= link_to '戻る', admin_post_path(@post), class: 'btn btn-secondary' %>
          <%= form.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
