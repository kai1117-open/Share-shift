<div class="container mt-5">
  <h1 class="text-center mb-4">新規投稿</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= form_with model: @post, url: public_posts_path, local: true do |form| %>
        <% if @post.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">エラーがあります</h4>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "タイトルを入力" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "投稿内容を入力" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit '投稿する', class: "btn btn-primary" %>
          <%= link_to '戻る', public_posts_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
