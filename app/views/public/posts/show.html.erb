<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @post.title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <p><%= @post.content %></p>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to '編集', edit_public_post_path(@post), class: 'btn btn-warning' %>
    <%= link_to '戻る', public_posts_path, class: 'btn btn-secondary' %>
  </div>
</div>
