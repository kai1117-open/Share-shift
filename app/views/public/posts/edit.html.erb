<div class="container mt-5">
  <h1 class="text-center mb-4">投稿編集</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= form_with model: @post, url: public_post_path(@post), method: :patch, local: true do |form| %>
        <% if @post.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">エラーがあります</h4>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 5 %>
        </div>

        <div class="d-flex justify-content-between">
        <div class="d-flex">
          <%= link_to '削除', public_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-lg me-2' %>
          <%= form.submit '更新する', class: "btn btn-primary" %>
        </div>
        <%= link_to '戻る', public_posts_path, class: 'btn btn-outline-secondary btn-lg' %>
        </div>


      <% end %>
    </div>
  </div>
</div>
