<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @user.name %> の詳細</h1>

  <div class="card shadow-sm p-4 mb-4 bg-light rounded">
  <% if current_user == @user %>
    <p><strong>メール:</strong> <%= @user.email %></p>
    <p><strong>住所:</strong> <%= @user.address %></p>
  <% end %>
    <p><strong>交通手段:</strong> <%= @user.transportation %></p>
    <p><strong>役職:</strong> <%= @user.role %></p>
    <p><strong>状態:</strong> <%= @user.status ? '有効' : '無効' %></p>
  </div>

  <div class="d-flex justify-content-between">
    <% if current_user == @user %>
      <%= link_to '編集', edit_public_user_path(@user), class: 'btn btn-warning btn-sm' %>
    <% end %>
      <%= link_to '戻る', public_users_path, class: 'btn btn-secondary btn-sm' %>
  </div>

  <div class="mt-3">
    <p><strong>マイシフトへのリンク</strong></p>
  <% if current_user != @user %>
    <%= link_to 'chatを始める', public_chat_path(@user.id), class: "ml-3" %>
  <% end %>
  </div>
</div>
