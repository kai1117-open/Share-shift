<div class="container mt-5">
  <h1 class="text-center mb-4">ユーザー一覧</h1>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>名前</th>
        <th>メール</th>
        <th>役職</th>
        <th>詳細</th>
        <th>編集</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to '詳細', public_user_path(user), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to '編集', edit_public_user_path(user), class: 'btn btn-warning btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
