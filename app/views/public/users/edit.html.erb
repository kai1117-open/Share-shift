<h1>ユーザー情報の編集</h1>

<%= form_with(model: @user, url: public_user_path(@user), method: :patch, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div>
      <h2>エラーが発生しました:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :transportation %>
    <%= form.select :transportation, options_for_select(User.transportation_options, @user.transportation) %>
    
  </div>


  <div>
    <%= form.submit '更新' %>
  </div>
<% end %>

<%= link_to '戻る', public_user_path(@user) %>

