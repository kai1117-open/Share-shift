<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div>
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>


  <div>
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %> (<%= @minimum_password_length %>文字以上)<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :transportation, "交通手段" %><br />
    <%= f.select :transportation, User.transportations.keys.map { |key| [key.humanize, key] } %>
  </div>

  <div>
    <%= f.label :role, "役職" %><br />
    <%= f.select :role, User.roles.keys.map { |key| [key.humanize, key] } %>
  </div>


  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

